<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foo">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Customer Dashboard"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:padding="6dp"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#C42B1D"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/custIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_launcher_background"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/custName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/custIcon"
        android:layout_toStartOf="@id/custIcon"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="10dp"
        android:text="Name"
        android:layout_marginStart="10dp"
        tools:ignore="HardcodedText" />
    <TextView
        android:id="@+id/custEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/custIcon"
        android:layout_toStartOf="@id/custIcon"
        android:layout_below="@id/custName"
        android:layout_marginLeft="40dp"
        android:text="Email"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/orderList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Go to your Orders"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/gotoRestaurantList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Hungry? go to Restaurant list"
        tools:ignore="HardcodedText" />


</RelativeLayout>
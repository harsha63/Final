<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/delivery">
        <TextView
            android:id="@+id/RestroName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RestroName"
            android:textSize="30sp"
            android:background="#0000AB"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/custName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CustomerName"
            android:layout_below="@id/RestroName"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/custPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CustomerPhone"
            android:layout_below="@id/custName"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:layout_below="@id/custPhone"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/accept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_marginTop="15dp"
            android:text="Accept and deliver"
            android:textSize="20sp"
            android:background="#7BE530"
            tools:ignore="HardcodedText" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderTracking">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:text="Order tracking"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/MenuItem"
        android:layout_width="244dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/Resto"
        android:layout_width="218dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:layout_below="@id/MenuItem"/>

    <TextView
        android:id="@+id/Info"
        android:layout_width="248dp"
        android:layout_height="74dp"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:layout_below="@id/Resto"
        android:layout_marginTop="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Confirmed"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="71dp"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="228dp"
                android:background="#716D6D"
                android:text="Order Confirmed"
                android:textColor="#FBFAFA"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Assign"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="71dp"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="91dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="160dp"
                android:background="#716D6D"
                android:text="Delivery guy Assigning"
                android:textColor="#FBFAFA"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/pickup"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="74dp"
                android:layout_marginLeft="74dp"
                android:layout_marginTop="158dp"
                android:layout_marginEnd="68dp"
                android:layout_marginRight="68dp"
                android:layout_marginBottom="81dp"
                android:background="#716D6D"
                android:text="Order on the way"
                android:textColor="#FBFAFA"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/otp"
                android:layout_width="270dp"
                android:layout_height="52dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="71dp"
                android:layout_marginLeft="71dp"
                android:layout_marginTop="233dp"
                android:layout_marginEnd="66dp"
                android:layout_marginRight="66dp"
                android:layout_marginBottom="15dp"
                android:background="#716D6D"
                android:text="Delivery On the Way"
                android:textColor="#FBFAFA"
                android:textSize="25sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>